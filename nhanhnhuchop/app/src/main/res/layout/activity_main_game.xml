<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainGame"
    android:background="@drawable/background1">
    <com.google.android.gms.ads.AdView
        android:id="@+id/adview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="top"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginTop="35dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <ImageView
                    android:id="@+id/score10"
                    android:background="@drawable/upscore"
                    android:layout_width="45dp"
                    android:layout_height="45dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="10"
                    android:textSize="25sp"
                    android:textColor="#fff"
                    android:textAlignment="center"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/score9"
                    android:background="@drawable/upscore"
                    android:layout_width="45dp"
                    android:layout_height="45dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="9"
                    android:textSize="25sp"
                    android:textColor="#fff"
                    android:textAlignment="center"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="45dp"
                android:layout_height="45dp">
                <ImageView
                    android:id="@+id/score8"
                    android:background="@drawable/upscore"
                    android:layout_width="45dp"
                    android:layout_height="45dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="8"
                    android:textSize="25sp"
                    android:textColor="#fff"
                    android:textAlignment="center"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="45dp"
                android:layout_height="45dp">
                <ImageView
                    android:id="@+id/score7"
                    android:background="@drawable/upscore"
                    android:layout_width="45dp"
                    android:layout_height="45dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:gravity="center"
                    android:text="7"
                    android:textSize="25sp"
                    android:textColor="#fff"
                    android:textAlignment="center" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="45dp"
                android:layout_height="45dp">
                <ImageView
                    android:id="@+id/score6"
                    android:background="@drawable/upscore"
                    android:layout_width="45dp"
                    android:layout_height="45dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="6"
                    android:textSize="25sp"
                    android:textColor="#fff"
                    android:textAlignment="center"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="45dp"
                android:layout_height="45dp">
                <ImageView
                    android:id="@+id/score5"
                    android:background="@drawable/upscore"
                    android:layout_width="45dp"
                    android:layout_height="45dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="5"
                    android:textSize="25sp"
                    android:textColor="#fff"
                    android:textAlignment="center"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="45dp"
                android:layout_height="45dp">
                <ImageView
                    android:id="@+id/score4"
                    android:background="@drawable/upscore"
                    android:layout_width="45dp"
                    android:layout_height="45dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="4"
                    android:textSize="25sp"
                    android:textColor="#fff"
                    android:textAlignment="center"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="45dp"
                android:layout_height="45dp">
                <ImageView
                    android:id="@+id/score3"
                    android:background="@drawable/upscore"
                    android:layout_width="45dp"
                    android:layout_height="45dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="3"
                    android:textSize="25sp"
                    android:textColor="#fff"
                    android:textAlignment="center"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="45dp"
                android:layout_height="45dp">
                <ImageView
                    android:id="@+id/score2"
                    android:background="@drawable/upscore"
                    android:layout_width="45dp"
                    android:layout_height="45dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="2"
                    android:textSize="25sp"
                    android:textColor="#fff"
                    android:textAlignment="center"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="45dp"
                android:layout_height="45dp">
                <ImageView
                    android:id="@+id/score1"
                    android:background="@drawable/upscore"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                   />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="25sp"
                    android:textColor="#fff"
                    android:textAlignment="center"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="45dp"
                android:layout_height="45dp">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/icon_start"/>

            </FrameLayout>

        </LinearLayout>
            <ImageView
                android:id="@+id/avatar"
                android:layout_gravity="right"
                android:background="@drawable/one"
                android:layout_width="45dp"
                android:layout_height="45dp" />
        </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">



    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:text="time"
        android:textColor="#00EE00"
        android:textSize="25sp"
        android:gravity="end"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="bottom"
        android:layout_weight="1.6"
        android:background="#CCCCFFFF"
        android:layout_marginRight="10dp"
        android:foregroundGravity="center">
        <TextView
            android:layout_gravity="center"
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="20sp"
            android:textAlignment="center"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:orientation="vertical">
        <Button
            android:id="@+id/answer1"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:background="@drawable/button_green"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/answer2"
            android:layout_width="match_parent"
            android:background="@drawable/button_green"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/answer3"
            android:layout_width="match_parent"
            android:background="@drawable/button_green"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/answer4"
            android:layout_width="match_parent"
            android:background="@drawable/button_green"
            android:layout_height="wrap_content" />

    </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>