            </FrameLayout>

        </LinearLayout>
            <ImageView
                android:id="@+id/circlescore"
                android:layout_gravity="right"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/circle"
                android:layout_width="30dp"
                android:visibility="gone"
                android:layout_height="30dp" />
            <ImageView
                android:id="@+id/avatar"
                android:layout_gravity="right"
                android:layout_marginTop="30dp"
                android:background="@drawable/one"
                android:layout_width="45dp"
                android:layout_height="45dp" />

        </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:weightSum="3">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2">
    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:text="time"
        android:textColor="#00EE00"
        android:textSize="25sp"
        android:gravity="right"
        android:layout_weight="1"/>
</LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_gravity="bottom"
        android:layout_weight="1.9"
        android:background="@drawable/content"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:foregroundGravity="center">
        <LinearLayout
            android:id="@+id/contentwin"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#CCaabbcc"
            android:weightSum="2">
            <TextView
                android:id="@+id/txtwin"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_weight="2.2"/>
            <ImageView
                android:id="@+id/win"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:scaleType="centerInside"
                />

        </LinearLayout>
        <ImageButton
            android:id="@+id/btnpause"
            android:background="@drawable/pause"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.1"/>
        <LinearLayout
            android:id="@+id/contentlose"
            android:background="#CCaabbcc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom" >
        <ImageView
            android:id="@+id/lose"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerInside"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtlose"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/txtans"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/red"
                android:textSize="20sp"
                android:textAlignment="center"/>
        </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_gravity="center"
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="20sp"
            android:textAlignment="center"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/answer1"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_green"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/txtanswer1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textAlignment="center"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/answer2"
            android:layout_marginTop="5dp"
